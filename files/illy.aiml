<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
	<!-- insert your AIML categories here -->
	<aiml version="2.0">
    <!-- Start with a greeting and ask for the user's name -->
    <category>
        <pattern>HELLO</pattern>
        <template>
            Hello! What is your name?
        </template>
    </category>

    <!-- Ask for name if the user says "hi" -->
    <category>
        <pattern>HI</pattern>
        <template>
            Hi there! What is your name?
        </template>
    </category>

    <!-- Capture the user's name -->
    <category>
        <pattern>MY NAME IS *</pattern>
        <template>
            <think>
                <set name="username"><star/></set>
            </think>
            Nice to meet you, <get name="username"/>. From now on, I will refer to you as <get name="username"/>.
        </template>
    </category>

    <!-- If the user doesn't provide a name initially, keep asking -->
    <category>
        <pattern>I DON'T HAVE A NAME</pattern>
        <template>
            Everyone has a name! Please tell me yours.
        </template>
    </category>

    <!-- Handle scenarios where the name is not given initially -->
    <category>
        <pattern>*</pattern>
        <condition name="username">
            <li value="">I didn't catch your name. Could you please tell me what it is?</li>
            <li value="*">How can I assist you today, <get name="username"/>?</li>
        </condition>
    </category>

    <!-- Replacement patterns for first-person pronouns -->
    <category>
        <pattern>I AM *</pattern>
        <template>
            <get name="username"/> is <star/>
        </template>
    </category>

    <category>
        <pattern>I *</pattern>
        <template>
            <get name="username"/> <star/>
        </template>
    </category>

    <category>
        <pattern>MY *</pattern>
        <template>
            <get name="username"/>'s <star/>
        </template>
    </category>

    <category>
        <pattern>ME *</pattern>
        <template>
            <get name="username"/> <star/>
        </template>
    </category>

    <category>
        <pattern>ME</pattern>
        <template>
            <get name="username"/>
        </template>
    </category>

    <category>
        <pattern>MYSELF</pattern>
        <template>
            <get name="username"/> self
        </template>
    </category>
</aiml>
</aiml>